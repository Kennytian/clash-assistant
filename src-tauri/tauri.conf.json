{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Clash 小助手",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "run-echo",
            "cmd": "echo",
            "args": ["message"]
          },
          {
            "name": "run-list",
            "cmd": "ls",
            "args": ["-la"]
          },
          {
            "name": "npm",
            "cmd": "npm",
            "args": true
          },
          {
            "name": "sh",
            "cmd": "sh",
            "args": ["-c", { "validator": "\\S+" }]
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": ["/C", { "validator": "\\S+" }]
          },
          {
            "name": "run-git-commit",
            "cmd": "git",
            "args": ["commit", "-m", { "validator": "\\S+" }]
          },
          {
            "name": "node",
            "cmd": "node",
            "args": ["-v"]
          }
        ]
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "title": "Clash 小助手",
        "width": 1024,
        "height": 800
      }
    ]
  }
}
